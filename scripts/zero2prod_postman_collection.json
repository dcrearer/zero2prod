				{
					"name": "Subscribe",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate random name and email",
									"const names = ['John', 'Jane', 'Alice', 'Bob', 'Charlie', 'Diana', 'Eve', 'Frank'];",
									"const surnames = ['Smith', 'Johnson', 'Williams', 'Brown', 'Jones', 'Garcia', 'Miller', 'Davis'];",
									"const domains = ['example.com', 'test.com', 'demo.org', 'sample.net'];",
									"",
									"const randomName = names[Math.floor(Math.random() * names.length)];",
									"const randomSurname = surnames[Math.floor(Math.random() * surnames.length)];",
									"const randomDomain = domains[Math.floor(Math.random() * domains.length)];",
									"const timestamp = Date.now();",
									"",
									"pm.globals.set('random_name', `${randomName} ${randomSurname}`);",
									"pm.globals.set('random_email', `${randomName.toLowerCase()}.${randomSurname.toLowerCase()}.${timestamp}@${randomDomain}`);"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "name",
									"value": "{{random_name}}",
									"type": "text"
								},
								{
									"key": "email",
									"value": "{{random_email}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{dev_url}}/subscriptions",
							"host": [
								"{{dev_url}}"
							],
							"path": [
								"subscriptions"
							]
						},
						"description": "Subscribe a user to the newsletter with random data"
					},
					"response": []
				},
